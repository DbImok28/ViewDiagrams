@using ViewDiagrams.Models.Helpers
@model ProfileViewModel

@section Styles {
	<link rel="stylesheet" href="~/css/forms.css" asp-append-version="true" />
}

<section class="h-100 my-login-page">
	<div class="container h-100">
		<div class="row justify-content-md-center h-100">
			<div class="card-wrapper">
				<div class="brand">
					<img src="~/icons/logo_bd.png" alt="logo">
				</div>

				<div class="card fat rounded">
					<div class="card-body">
						<h4 class="card-title">Profile</h4>
						<div class="list-group">
							<div class="d-flex flex-row align-items-center align-self-center ps-3">
								<i class="bi bi-person-circle" style="font-size: 42px"></i>
								<div class="mx-4">
									<p class="m-0 pb-0 fs-5">@User.GetUserName()</p>
									<p class="m-0 pb-0 fs-5">@User.GetUserEmail()</p>
								</div>
							</div>
						</div>
					</div>
				</div>

				<div class="card fat rounded">
					<div class="card-body">
						<h4 class="card-title">Workspaces</h4>
						<div class="list-group">
							@foreach (Workspace workspace in Model.User.Workspaces)
							{
								<a href="/?id=@workspace.Id" class="list-group-item list-group-item-action d-flex flex-row" aria-current="true">
									<i class="bi bi-boxes fs-3 pe-3"></i>
									<div class="d-flex w-100 justify-content-between">
										<h5 class="mb-0 align-self-center">@workspace.Name</h5>
										<small>3 days ago</small>
									</div>
									@* <p class="mb-1">Some placeholder content in a paragraph.</p>
									<small>And some small print.</small> *@
								</a>
							}
						</div>
					</div>
				</div>
			</div>
		</div>
	</div>
</section>