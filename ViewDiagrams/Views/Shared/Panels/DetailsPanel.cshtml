<div class="ms-auto bg-white border-end right-panel">
    <div class="d-flex flex-row align-items-stretch flex-shrink-0 border-bottom right-tab-bar">
        <ul class="nav nav-pills nav-flush flex-row text-center" role="tablist">
            <li class="nav-item">
                <button class="nav-link active py-2 border-end h-100" id="detail-panel-tab"
                        data-bs-toggle="tab" data-bs-target="#detail-panel" type="button" role="tab" aria-controls="detail-panel" aria-selected="true">
                    <i class="bi bi-info fs-4"></i>
                </button>
            </li>
            <li>
                <button class="nav-link py-2 border-end h-100" id="jsonDocumentViwer-panel-tab"
                        data-bs-toggle="tab" data-bs-target="#jsonDocumentViwer-panel" type="button" role="tab" aria-controls="jsonDocumentViwer-panel" aria-selected="false">
                    <i class="bi bi-filetype-json fs-4"></i>
                </button>
            </li>
             @if (!ViewBag.IsGuest)
            {
                <li>
                    <button class="nav-link py-2 border-end h-100" id="chat-panel-tab"
                            data-bs-toggle="tab" data-bs-target="#chat-panel" type="button" role="tab" aria-controls="chat-panel" aria-selected="false">
                        <i class="bi bi-chat fs-4"></i>
                    </button>
                </li>
            }
        </ul>
    </div>

    <div class="bg-white item-panel tab-content p-3 h-100">
        <div class="d-flex flex-row ">
            <button class="ms-auto btn p-0" id="remove-diagram-btn">
                <i class="bi bi-trash fs-4 align-self-end"></i>
            </button>
        </div>
        <div class="tab-pane fade overflow-auto h-100 active show" id="detail-panel" role="tabpanel" aria-labelledby="detail-panel-tab">
            <ul class="list-unstyled p-3 ps-0">

                <li class="mb-1">
                    <button class="btn btn-toggle align-items-center rounded" data-bs-toggle="collapse"
                            data-bs-target="#diagram-relationship" aria-expanded="true">
                        Relationship
                    </button>
                    <div class="collapse show" id="diagram-relationship" style="">
                        <!-- Section generated by code -->
                    </div>
                </li>
                <li class="mb-1">
                    <button class="btn btn-toggle align-items-center rounded" data-bs-toggle="collapse"
                            data-bs-target="#diagram-parameters" aria-expanded="true">
                        Parameters
                    </button>
                    <div class="collapse show" id="diagram-parameters" style="">
                        <!-- Section generated by code -->
                    </div>
                </li>
            </ul>
            <div style="height:calc(var(--down-panel-height) + 20px)"></div>
        </div>
        <div class="tab-pane fade overflow-auto h-100" id="jsonDocumentViwer-panel" role="tabpanel" aria-labelledby="jsonDocumentViwer-panel-tab">
            <div class="collapse show" id="workspace-document-collapse" style="">
                <label for="json-document-viewer" class="form-label">Document as Json</label>
                <textarea class="form-control" id="json-document-viewer" rows="40" style="font-size: 0.8rem;"></textarea>
            </div>
        </div>
        @if (!ViewBag.IsGuest)
        {
            <div class="tab-pane fade h-100 d-flex flex-column" id="chat-panel" role="tabpanel" aria-labelledby="chat-panel-tab">
                <div class="overflow-auto" id="chat-messages" data-mdb-perfect-scrollbar="true">
                <!-- Section generated by code -->
            </div>
                <div class="mt-auto text-muted d-flex justify-content-start align-items-center align-self-center py-3 mb-5">
                    <div class="input-group mb-0">
                        <input type="text" class="form-control" id="input-send-msg" placeholder="Type message" aria-describedby="button-send-msg" />
                        <button class="btn btn-primary" type="button" id="button-send-msg" style="padding-top: .55rem;">
                            Send
                        </button>
                    </div>
                </div>
            </div>
        }
    </div>
</div>
