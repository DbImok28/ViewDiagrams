@model Selector

<div class="col-md mt-2">
    <div class="form-floating">
        <select class="form-select" id="input-@Model.Name" aria-label="Floating label select">
            @for (int i = 0; i < Model.Values.Count; i++)
            {
                @if (Model.SelectedIndex == i)
                {
                    <option value="i" selected>@Model.Values[i]</option>
                }
                else
                {
                    <option value="i">@Model.Values[i]</option> 
                }
            }
        </select>
        <label for="input-@Model.Name">@Model.Name</label>
    </div>
</div>
